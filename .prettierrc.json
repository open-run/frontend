{
  "endOfLine": "lf",
  "singleQuote": true,
  "printWidth": 120,
  "tabWidth": 2,
  "useTabs": false,
  "quoteProps": "as-needed",
  "jsxSingleQuote": true,
  "trailingComma": "all",
  "arrowParens": "always",
  "bracketSpacing": true,
  "jsxBracketSameLine": true,
  "requirePragma": false,
  "insertPragma": false,
  "proseWrap": "preserve",
  "semi": false,
  "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"],
  "importOrder": [
    "^@contexts/(.*)$",
    "^@store/(.*)$",
    "^@type/(.*)$",
    "^@components/(.*)$",
    "^@shared/(.*)$",
    "^@icons/(.*)$",
    "^@hooks/(.*)$",
    "^@apis/(.*)$",
    "^@utils/(.*)$",
    "^@constants/(.*)$",
    "^@styles/(.*)$",
    "^[./]"
  ],
  "importOrderSortSpecifiers": true
}
